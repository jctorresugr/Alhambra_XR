<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_horizontal"
    android:columnCount="4"
    android:rowCount="3"
    tools:context=".MainActivity">

    <!-- Previews -->
    <ScrollView
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="3"
        android:layout_columnSpan="1"
        android:background="@color/treeColor"
        android:minWidth="192dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="0">
        <com.sereno.view.TreeView
            android:id="@+id/previewLayout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:topOffsetPerChild="10px"
            app:leftOffsetPerLevel="25px"
            app:strokeWidth="3px"
            app:extendHeight="64px"
            app:extendWidth="64px"
            app:inExtendSrc="@drawable/in_expend"
            app:notExtendSrc="@drawable/not_expend"
            android:textAlignment="center"
            />
    </ScrollView>

    <!-- Next / Previous buttons -->
    <LinearLayout
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/previousTimeButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:src="@drawable/previous"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/previous"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/next"/>
            <ImageButton
                android:id="@+id/nextTimeButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:src="@drawable/next" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_row="1"
        android:layout_rowSpan="2"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/mainTextEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:scrollHorizontally="false"/>
    </ScrollView>
</GridLayout>